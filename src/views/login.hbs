<link rel="stylesheet" href="/css/login.css">

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-2">Admin login</h5>
                        <form action="http://localhost:3000/acc/login" method="post">
                            {{#unless success}}
                            <div class="form-floating mb-3 errRow">
                                <p class="fs-5 text-danger ">Username or password was wrong!</p>
                            </div>
                            {{/unless}}
                            <div class="form-floating mb-3">
                                <input name="username" type="text" class="form-control" id="floatingInput"
                                    placeholder="Username">
                                <label for="floatingInput">Username</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input name="password" type="password" class="form-control" id="floatingPassword"
                                    placeholder="Password">
                                <label for="floatingPassword">Password</label>
                            </div>

                            <div class="form-check mb-3 d-flex justify-content-between">
                                <div class="left">
                                    <input name="remember" class="form-check-input" type="checkbox" value="true"
                                        id="rememberPasswordCheck">
                                    <label class="form-check-label" for="rememberPasswordCheck">
                                        Remember me
                                    </label>
                                </div>
                                <div class="right">
                                    <p><a href="http://localhost:3000/acc/signup"
                                            class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Sign
                                            up</a></p>
                                </div>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Login
                                </button>
                            </div>
                            <hr class="my-4">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>