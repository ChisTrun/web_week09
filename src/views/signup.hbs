<link rel="stylesheet" href="/css/login.css">

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-light fs-2">Admin sign up</h5>
                        <form action="http://{{host}}:{{port}}/acc/signup" method="post">
                            {{#unless success}}
                            <div class="form-floating mb-3 errRow">
                                <p class="fs-5 text-danger ">Username has been registered!</p>
                            </div>
                            {{/unless}}
                            <div class="form-floating mb-3">
                                <input name="name" required type="text" class="form-control" id="floatingInput"
                                    placeholder="Your name">
                                <label for="floatingInput">Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input name="dob" required type="date" class="form-control" id="floatingInput"
                                    placeholder="Your name">
                                <label for="floatingInput">Date of birth</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input name="email" required type="email" class="form-control" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Email</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input name="username" required type="text" class="form-control" id="floatingInput"
                                    placeholder="Username">
                                <label for="floatingInput">Username</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input name="password" required type="password" class="form-control"
                                    id="floatingPassword" placeholder="Password">
                                <label for="floatingPassword">Password</label>
                            </div>
                            <div class="form-check mb-3 d-flex justify-content-end">
                                <p><a href="http://{{host}}:{{port}}/acc/login"
                                        class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">You
                                        have an account</a></p>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign
                                    in</button>
                            </div>
                            <hr class="my-4">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>